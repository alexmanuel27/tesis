@article{jiangVulnerabilityCropWater2022,
  title = {Vulnerability of Crop Water Footprint in Rain-Fed and Irrigation Agricultural Production System under Future Climate Scenarios},
  author = {Jiang, Tingting and Sun, Shikun and Li, Zheng and Li, Qian and Lu, Yejia and Li, Chong and Wang, Yubao and Wu, Pute},
  year = {2022},
  month = nov,
  journal = {Agricultural and Forest Meteorology},
  volume = {326},
