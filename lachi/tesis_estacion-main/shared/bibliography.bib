}

@article{blundo-cantoScalingWeatherClimate2021,
  title = {Scaling Weather and Climate Services for Agriculture in {{Senegal}}: {{Evaluating}} Systemic but Overlooked Effects},
  shorttitle = {Scaling Weather and Climate Services for Agriculture in {{Senegal}}},
  author = {{Blundo-Canto}, Genowefa and Andrieu, Nadine and Soule Adam, Nawalyath and Ndiaye, Ousmane and Chiputwa, Brian},
  year = {2021},
  month = apr,
  journal = {Climate Services},
  volume = {22},
